{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "jsx": "preserve",
    "strictFunctionTypes": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist"]
}
